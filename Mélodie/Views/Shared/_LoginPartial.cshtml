@using Mélodie.Controllers;
@using Mélodie.Models;
@using Microsoft.AspNet.Identity;
@if (Request.IsAuthenticated)
{

    if(Session["Role"] != null && Session["Role"].Equals( "Instructor") )
    {

        <li class="bold">@Html.ActionLink("Students", "Index", "Users", null, new { @class = "black-text waves-effect waves-indigo" })</li>
        <li class="bold">@Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "black-text waves-effect waves-indigo" })</li>

    }
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
                    @Html.AntiForgeryToken()

                    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Account", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage", @class = "black-text waves-effect waves-indigo" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class = "black-text waves-effect waves-indigo">Log off</a></li>
    </ul>
    }
}
else
{

    <ul class="nav navbar-nav navbar-right">
        <li class="bold">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" , @class = "black-text waves-effect waves-indigo" })</li>
    </ul>
}
